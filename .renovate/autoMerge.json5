{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": [
        "Auto-merge container updates for trusted containers"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": false,
      "matchUpdateTypes": ["digest", "minor", "patch"],
      "matchPackagePatterns": [
        "ghcr.io/bjw-s",
        "ghcr.io/onedr0p",
        "ghcr.io/zariel",
        "ghcr.io/home-operations",
        "ghcr.io/cross-seed/cross-seed",
        "docker.io/filebrowser/filebrowser"
      ]
    },
    {
      "description": "Auto-merge OCI Charts",
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackagePatterns": [
        "ghcr.io/prometheus-community/charts",
        "ghcr.io/grafana/helm-charts",
        "ghcr.io/netbox-community/netbox-chart/netbox"
      ],
      "ignoreTests": false,
    },
    {
      "description": "Auto-merge GitHub Actions",
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "branch",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "minimumReleaseAge": "3 days",
      "ignoreTests": true,
    },
    {
      "description": [
        "dont auto merge qbittorrent updates until clients are allowed"
      ],
      "matchDatasources": [
        "docker"
      ],
      "automerge": false,
      "matchPackageNames": [
        "ghcr.io/home-operations/qbittorrent"
      ]
    },
    {
      description: ["auto merge grafana dashboards"],
      matchDatasources: ["custom.grafana-dashboards"],
      autoMerge: true,
      autoMergeType: "branch",
      ignoreTests: true,
    },
  ]
}
