{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    "github>zariel/holywoo//.renovate/allowedVersions.json5",
    "github>zariel/holywoo//.renovate/autoMerge.json5",
    "github>zariel/holywoo//.renovate/commitMessage.json5",
    "github>zariel/holywoo//.renovate/customManagers.json5",
    "github>zariel/holywoo//.renovate/grafanaDashboards.json5",
    "github>zariel/holywoo//.renovate/groups.json5",
    "github>zariel/holywoo//.renovate/packageRules.json5",
    "github>zariel/holywoo//.renovate/semanticCommits.json5",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Europe/London)",
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "ignorePaths": [
    "**/*.sops.*",
    "**/resources/**",
    "**/ansible/**",
  ],
  "flux": {
    "fileMatch": [
      "(^|/)k8s/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)k8s/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    fileMatch: ["(^|/)k8s/.+\\.ya?ml$"],
  }
}
