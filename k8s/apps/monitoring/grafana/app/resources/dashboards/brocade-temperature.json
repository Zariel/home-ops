{
  "uid": "brocade-temp",
  "title": "Brocade ICX7250 Temperatures",
  "description": "Live chassis and per-sensor temperatures from snmp-exporter",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "tags": ["brocade", "snmp", "temperature"],
  "timezone": "",
  "time": { "from": "now-3h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "victoriametrics" },
        "refresh": 1,
        "definition": "label_values(brocade_temperature_celsius, instance)",
        "query": { "query": "label_values(brocade_temperature_celsius, instance)", "refId": "Templating" },
        "current": { "selected": false, "text": "All", "value": ".*" },
        "includeAll": true,
        "multi": false,
        "label": "Instance",
        "regex": "",
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Chassis Temperature",
      "datasource": { "type": "prometheus", "uid": "victoriametrics" },
      "targets": [
        { "refId": "A", "expr": "brocade_chassis_temperature_celsius{instance=~\"$instance\"}" }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 100 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Per-Sensor Temperature",
      "datasource": { "type": "prometheus", "uid": "victoriametrics" },
      "targets": [
        { "refId": "A", "expr": "brocade_temperature_celsius{instance=~\"$instance\"}", "legendFormat": "slot={{slot}} sensor={{sensor}}" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "celsius", "color": { "mode": "palette-classic" } },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "right", "showLegend": true },
        "tooltip": { "mode": "multi", "sort": "asc" }
      },
      "gridPos": { "h": 9, "w": 18, "x": 6, "y": 0 }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Max Sensor Temp",
      "datasource": { "type": "prometheus", "uid": "victoriametrics" },
      "targets": [
        { "refId": "A", "expr": "max(brocade_temperature_celsius{instance=~\"$instance\"})" }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 100 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 6 }
    }
  ]
}
